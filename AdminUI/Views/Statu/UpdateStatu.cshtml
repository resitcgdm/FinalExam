@using Entities.Concrete
@model Statu
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatu" asp-controller="Statu" method="post">
                        <div class="row">
                            <div class="col-md-5 pr-md-1">
                                <div class="form-group d-none">
                                    <label>Statu Id</label>
                                    <input readonly asp-for="StatuId" type="number" class="form-control" placeholder=" Type ...">
                                </div>
                            </div>
                            <div class="col-md-5 pr-md-1">
                                <div class="form-group">
                                    <label>Situtation</label>
                                    <input asp-for="Situtation" type="text" class="form-control" placeholder=" Situtation ">
                                </div>
                            </div>
                         

                        </div>



                        <div class="card-footer">
                            <button type="submit" class="btn btn-fill btn-primary">Save</button>
                        </div>
                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-info" role="alert">@TempData["message"]</div>
                        }

                    </form>

                </div>

            </div>
        </div>


    </div>
</div>