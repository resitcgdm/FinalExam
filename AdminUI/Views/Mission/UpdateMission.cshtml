@using Entities.Concrete
@model Mission
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateMission" asp-controller="Mission" method="post">
                        <div class="row">
                            <div class="col-md-5 pr-md-1">
                                <div class="form-group d-none">
                                    <label>MissionId</label>
                                    <input readonly asp-for="TaskId" type="text" class="form-control" placeholder=" Type Title ...">
                                </div>
                            </div>
                            <div class="col-md-5 pr-md-1">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input asp-for="Title" type="text" class="form-control" placeholder=" Type Title ...">
                                </div>
                            </div>
                            <div class="col-md-3 px-md-1">
                                <div class="form-group">
                                    <label>Owner Id</label>

                                    <input asp-for="OwnerId" type="number" class="form-control " placeholder="OwnerId">

                                </div>
                            </div>
                            <div class="col-md-4 pl-md-1">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Statu Id</label>
                                    <input asp-for="StatuId" type="number" class="form-control " placeholder="StatuId">

                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-6 pl-md-1">
                                <div class="form-group">
                                    <label>Description</label>
                                    <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                                </div>
                            </div>

                        </div>


                        <div class="card-footer">
                            <button type="submit" class="btn btn-fill btn-primary">Save</button>
                        </div>
                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-info" role="alert">@TempData["message"]</div>
                        }

                    </form>

                </div>

            </div>
        </div>


    </div>
</div>